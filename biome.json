{
  "$schema": "https://biomejs.dev/schemas/project.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noAutofocus": "error"
      },
      "suspicious": {
        "noUndef": "error"
      },
      "style": {
        "useCamelCase": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true
  },
  "files": {
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
}
